{
	"name": "@onedotprojects/eslint-plugin",
	"version": "2.0.5",
	"description": "OneDot Projects' ESLint Style Guide",
	"keywords": [
		"eslint",
		"eslint-plugin",
		"eslint-config"
	],
	"homepage": "https://github.com/onedotprojects/eslint-plugin#readme",
	"bugs": {
		"url": "https://github.com/onedotprojects/eslint-plugin/issues",
		"email": "1auth.wgyt@gmail.com"
	},
	"license": "MIT",
	"author": "OneDot Projects",
	"main": "src/index.js",
	"scripts": {
		"lint": "prettier --write ."
	},
	"prettier": {
		"printWidth": 100,
		"proseWrap": "always",
		"quoteProps": "consistent",
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"jsxBracketSameLine": false,
		"vueIndentScriptAndStyle": true,
		"overrides": [
			{
				"files": [
					"**.md",
					"**/LICENSE"
				],
				"options": {
					"trailingComma": "es5",
					"proseWrap": "never",
					"parser": "markdown"
				}
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/onedotprojects/eslint-plugin.git"
	},
	"peerDependenciesMeta": {
		"eslint-plugin-node": {
			"optional": true
		},
		"eslint-plugin-sonarjs": {
			"optional": true
		}
	},
	"dependencies": {
		"@babel/eslint-parser": "^7.14.7",
		"@babel/plugin-syntax-top-level-await": "^7.14.5",
		"eslint-config-prettier": "^8.3.0"
	},
	"peerDependencies": {
		"eslint": "^7.32.0",
		"eslint-config-hardcore": "^20.2.0",
		"eslint-plugin-compat": "^3.12.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-html": "^6.1.2",
		"eslint-plugin-import": "^2.24.0",
		"eslint-plugin-jsdoc": "^36.0.7",
		"eslint-plugin-markdown": "^2.2.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-regexp": "^0.13.2",
		"eslint-plugin-sonarjs": "^0.9.1",
		"eslint-plugin-switch-case": "^1.1.2",
		"eslint-plugin-unicorn": "^35.0.0",
		"prettier": "^2.3.2"
	}
}
